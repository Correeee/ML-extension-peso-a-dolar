{
    "manifest_version": 3,
    "name": "ML peso a dólar",
    "description": "Muestra el precio en dólares de los productos de Mercadolibre.",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.mercadolibre.com.ar/*",
                "https://www.mercadolibre.com/*",
                "https://articulo.mercadolibre.com.ar/*"
            ],
            "css": [
                "style/style.css"
            ]
        }
    ]
}